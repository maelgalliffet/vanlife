{
  "name": "vanlife-weekend-booking",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bash ./scripts/dev.sh",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "start": "npm run start -w apps/api",
    "lint": "npm run lint -w apps/api && npm run lint -w apps/web",
    "deploy": "bash ./scripts/deploy.sh",
    "deploy:aws": "bash ./scripts/deploy-aws.sh",
    "deploy:lambda": "bash ./scripts/deploy-lambda.sh",
    "migrate:lambda": "bash ./scripts/migrate-to-lambda.sh",
    "sync-data:aws": "bash ./scripts/sync-data.sh aws-instance /home/ubuntu/vanlife"
  }
}